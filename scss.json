{
    "set height and width": {
        "prefix": "hw",
        "body": [
            "height: 100%;",
            "width: 100%;"
        ],
        "description": "set height and width"
    },
    "host": {
        "prefix": ":host",
        "body": [
            " :host {",
            "  height: 100%;",
            "  width: 100%;",
            "}"
        ],
        "description": "set host with height and width"
    },
    "background-color": {
        "prefix": "back",
        "body": "background-color: $0;",
        "description": "background-color"
    },
    "margin-right": {
        "prefix": "mr",
        "body": "margin-right: $0;",
        "description": "margin-right"
    },
    "margin-left": {
        "prefix": "ml",
        "body": "margin-left: $0;",
        "description": "margin-left"
    },
    "margin-top": {
        "prefix": "mt",
        "body": "margin-top: $0;",
        "description": "margin-top"
    },
    "margin-bottom": {
        "prefix": "mb",
        "body": "margin-bottom: $0;",
        "description": "margin-bottom"
    },
    "default": {
        "prefix": "default",
        "body": [
            "html, body {",
            "   height: 100%;",
            "   width: 100%;",
            "   padding: 0;",
            "   margin: 0;",
            "}"
        ],
        "description": "default set up for style.scss"
    },
    "flex": {
        "prefix": "flex",
        "body": "display: flex;",
        "description": "flex"
    },
    "flex direction shorthand": {
        "prefix": "fd",
        "body": "flex-direction: column;",
        "description": "flex direction shorthand"
    },
    "flex justify content shorthand": {
        "prefix": "jc",
        "body": "justify-content: $0;",
        "description": "flex justify content shorthand"
    },
    "flex align items shorthand": {
        "prefix": "ai",
        "body": "align-items: $0;",
        "description": "flex align items shorthand"
    }
}
