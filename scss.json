{
    // Place your snippets for scss here. Each snippet is defined under a snippet name and has a prefix, body and
    // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
    // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
    // same ids are connected.
    // Example:
    // "Print to console": {
    // 	"prefix": "log",
    // 	"body": [
    // 		"console.log('$1');",
    // 		"$2"
    // 	],
    // 	"description": "Log output to console"
    // }
    "make container": {
        "prefix": ".container",
        "body": [
            ".container {",
            "  height: 100%;",
            "  width: 100%;",
            "}"
        ],
        "description": "make container"
    },
    "make row": {
        "prefix": ".row",
        "body": [
            ".row {",
            "  height: 100%;",
            "  width: 100%;",
            "  display: flex;",
            "  flex-direction: row;",
            "  align-items: center;",
            "  justify-content: center;",
            "}"
        ],
        "description": "make row"
    },
    "make column": {
        "prefix": ".col",
        "body": [
            ".col {",
            "  height: 100%;",
            "  width: 100%;",
            "  display: flex;",
            "  flex-direction: column;",
            "  align-items: center;",
            "  justify-content: center;",
            "}"
        ],
        "description": "make column"
    },
    "set height and width": {
        "prefix": "hw",
        "body": [
            "height: 100%;",
            "width: 100%;"
        ],
        "description": "set height and width"
    },
    "center flex": {
        "prefix": "center",
        "body": [
            "display: flex;",
            "align-items: center;",
            "justify-content: center;"
        ],
        "description": "center flex"
    },
    "host": {
        "prefix": ":host",
        "body": [
            " :host {",
            "  height: 100%;",
            "  width: 100%;",
            "}"
        ],
        "description": "set host with height and width"
    },
    "flex": {
        "prefix": "flex",
        "body": [
            "display: flex;"
        ],
        "description": "flex"
    },
    "background-color": {
        "prefix": "back",
        "body": [
            "background-color: $0;"
        ],
        "description": "background-color"
    },
    "margin-right": {
        "prefix": "mr",
        "body": [
            "margin-right: $0;"
        ],
        "description": "margin-right"
    },
    "margin-left": {
        "prefix": "ml",
        "body": [
            "margin-left: $0;"
        ],
        "description": "margin-left"
    },
    "margin-top": {
        "prefix": "mt",
        "body": [
            "margin-top: $0;"
        ],
        "description": "margin-top"
    },
    "margin-bottom": {
        "prefix": "mb",
        "body": [
            "margin-bottom: $0;"
        ],
        "description": "margin-bottom"
    },
    "default": {
        "prefix": "default",
        "body": [
            "html, body {",
            "   height: 100%;",
            "   width: 100%;",
            "   padding: 0;",
            "   margin: 0;",
            "}"
        ],
        "description": "default set up for style.scss"
    },
    "set up flex column": {
        "prefix": "fcol",
        "body": [
            "height: 100%;",
            "display: flex;",
            "flex-direction: column;"
        ],
        "description": "set up flex column"
    },
    "flex direction shorthand": {
        "prefix": "fd",
        "body": [
            "flex-direction: column;"
        ],
        "description": "flex direction shorthand"
    },
    "flex justify content shorthand": {
        "prefix": "jc",
        "body": [
            "justify-content: $0;"
        ],
        "description": "flex justify content shorthand"
    },
    "flex align items shorthand": {
        "prefix": "ai",
        "body": [
            "align-items: $0;"
        ],
        "description": "flex align items shorthand"
    },
}
