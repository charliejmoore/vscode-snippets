{
    // Place your snippets for scss here. Each snippet is defined under a snippet name and has a prefix, body and 
    // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
    // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
    // same ids are connected.
    // Example:
    // "Print to console": {
    // 	"prefix": "log",
    // 	"body": [
    // 		"console.log('$1');",
    // 		"$2"
    // 	],
    // 	"description": "Log output to console"
    // }
    "make container": {
        "prefix": ".container",
        "body": [
            ".container {",
            "  height: 100%;",
            "  width: 100%;",
            "}"
        ],
        "description": "make container"
    },
    "make row": {
        "prefix": ".row",
        "body": [
            ".row {",
            "  height: 100%;",
            "  width: 100%;",
            "  display: flex;",
            "  flex-direction: row;",
            "  align-items: center;",
            "  justify-content: center;",
            "}"
        ],
        "description": "make row"
    },
    "make column": {
        "prefix": ".col",
        "body": [
            ".col {",
            "  height: 100%;",
            "  width: 100%;",
            "  display: flex;",
            "  flex-direction: column;",
            "  align-items: center;",
            "  justify-content: center;",
            "}"
        ],
        "description": "make column"
    },
    "set height and width": {
        "prefix": "hw",
        "body": [
            "  height: 100%;",
            "  width: 100%;"
        ],
        "description": "set height and width"
    },
    "center flex": {
        "prefix": "center",
        "body": [
            "  align-items: center;",
            "  justify-content: center;"
        ],
        "description": "center flex"
    },
    "host": {
        "prefix": ":host",
        "body": [
            " :host {",
            "  height: 100%;",
            "  width: 100%;",
            "}"
        ],
        "description": "set host with height and width"
    },
}